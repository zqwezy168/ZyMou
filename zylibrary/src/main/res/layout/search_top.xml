<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lr_search_do"
    android:layout_width="match_parent"
    android:background="#f9f9f9"
    android:gravity="center"
    android:layout_height="wrap_content">
    <zy.library.ui.text.ClearEditText
        android:id="@+id/et_search"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_btn_stroke_white"
        android:drawableLeft="@mipmap/icon_loupe"
        android:drawablePadding="5dp"
        android:layout_margin="5dp"
        android:gravity="left|center_vertical"
        android:iconifiedByDefault="false"
        android:inputType="textFilter"
        android:padding="10dp"
        android:imeOptions="actionSearch"
        android:queryHint="物资编码/条码"
        android:textColor="#6d6d6d"
        android:textColorHint="@color/text_color_hint"
        android:textSize="14sp"
        />


    <TextView
        android:id="@+id/tv_search_right"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:text="取消"
        android:padding="10dp"
        android:layout_height="wrap_content" />

</LinearLayout>
